#include <stdio.h>
#include <string.h>

int main() 
{
    char word[100];
    int count = 0;

    printf("Enter a word: ");
    scanf("%s", word);

    // Using the strlen function from string.h to count characters
   
    count = strlen(word);
    printf("Number of characters in the word: %d\n", count);

    return 0;
}
